<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("_Head")
<body class="bg-gray-50 font-sans antialiased">
    <div class="flex h-screen overflow-hidden">
        @await Html.PartialAsync("_Sidebar")

        <main class="flex-1 flex flex-col overflow-hidden">
            <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-8">
                <h1 class="text-xl font-bold text-gray-800">My Sessions</h1>
                <button class="bg-brand-red text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-700 transition-colors">
                    + Create New Session
                </button>
            </header>

            <div class="p-8 overflow-y-auto">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6 bg-white p-4 rounded-xl border border-gray-200">
                    <input type="text" placeholder="Search by name..." class="border rounded-lg px-3 py-2 text-sm focus:ring-1 focus:ring-brand-red outline-none">
                    <select class="border rounded-lg px-3 py-2 text-sm outline-none">
                        <option>Status: All</option>
                        <option>Upcoming</option>
                        <option>Active</option>
                        <option>Finished</option>
                    </select>
                    <input type="date" class="border rounded-lg px-3 py-2 text-sm outline-none">
                    <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200">Apply Filters</button>
                </div>

                <div class="bg-white border rounded-xl overflow-hidden shadow-sm">
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-gray-50 text-xs uppercase text-gray-500 font-semibold">
                            <tr>
                                <th class="px-6 py-4">Session Name</th>
                                <th class="px-6 py-4">Cohort</th>
                                <th class="px-6 py-4">Time Range</th>
                                <th class="px-6 py-4">Status</th>
                                <th class="px-6 py-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y text-sm">
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 font-medium">Binary Search Workshop</td>
                                <td class="px-6 py-4">Cohort 19</td>
                                <td class="px-6 py-4">09:00 - 18:00</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded-full text-xs font-medium">Upcoming</span>
                                </td>
                                <td class="px-6 py-4 text-right space-x-2">
                                    <button class="text-blue-600 hover:underline">Edit</button>
                                    <button class="text-brand-red hover:underline">Delete</button>
                                </td>
                            </tr>
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 font-medium">SQL Optimization</td>
                                <td class="px-6 py-4">Cohort 20</td>
                                <td class="px-6 py-4">10:00 - 16:00</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">Active</span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <span class="text-gray-400 italic text-xs">Started (No Delete)</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>
</html>